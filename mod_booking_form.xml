<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site">
	<name>mod_booking_form</name>
	<author>Daniel H Pavey</author>
	<creationDate>February 2015</creationDate>
	<copyright>East Devon IT</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dan@eastdevon.it</authorEmail>
	<authorUrl>www.eastdevonit.co.uk</authorUrl>
	<version>0.1</version>
	<description>For sytax of exclusions visit http://amsul.ca/pickadate.js/date/#disable-dates</description>
	<files>
		<filename module="mod_booking_form">mod_booking_form.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_booking_form.xml</filename>
	</files>
	<languages>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="email"
					type="text"
					default=""
					label="Email Address"
					description="Email address booking form contents to be sent to." >
					</field>
				<field
					name="xdates"
					type="textarea"
					default=""
					cols="40"
					rows="10"
					label="Excluded Dates"
					description="Dates to be excluded (unavailable) in date picker" >
					</field>
				<field
					name="successpage"
					type="text"
					default=""
					label="Success Page Address"
					description="Page redirects to after success" >
					</field>
					

			</fieldset>
		</fields>
	</config>
</extension>
